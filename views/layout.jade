include _mixins

doctype html
html
  head
    title Todo Manager
    link(rel='icon' href='/favicon.ico' type='image/x-icon')
    +stylesheet_link_tag('application')
    +javascript_include_tag('vendor/all')
    +javascript_include_tag('handlebars_templates')
  body
    block content
    +javascript_include_tag('application')
    +javascript_include_tag('models/todo', 'models/list')
    +javascript_include_tag('collections/todos', 'collections/lists')
    +javascript_include_tag('views/all_lists', 'views/complete_lists', 'views/current_list', 'views/list', 'views/modal', 'views/todos', 'views/todo')
    script.
      App.todos = new Todos(!{JSON.stringify(todos)});
      App.init()
