@import('whitespace_reset.css')
@import('mixins')

html, body
  height: 100%

body
  background: colors.content.bg
  font: normal 16px Helvetica, Arial, sans-serif
  letter-spacing: 1px

span.total
  float: right
  display: inline-block
  vertical-align: middle
  width: 20px
  border-radius: 10px
  margin-right: 30px
  background: colors.total.default.bg
  color: colors.total.default.text
  font-size: 14px
  line-height: 21px
  text-align: center

.selected span.total, header span.total
  background: colors.total.selected.bg
  color: colors.total.selected.text

#content
  padding: 20px 100px 20px 20px
  margin-left: 335px
  header
    margin: 20px 0 40px 15px
    #sidebar_toggle
      display: none
      background: no-repeat url("images/hamburger.png") 50% 50%
      width: 23px
      height: 18px
    h1
      padding-top: 42px
      font-size: 21px
      font-weight: normal
    span.total
      float: none
      margin-left: 20px
  main
    #add
      padding-bottom: 15px
      span
        display: inline-block
        width: 13px
        height: 13px
        margin-left: 15px
        background: no-repeat url("images/add.png") 50% 50%
      a
        padding-left: 10px
        color: colors.content.add
        text-decoration: none

    table
      width: 100%
      border-spacing: 0
      td
        padding: 15px 0
        border-top: 1px solid colors.content.table.border
        cursor: pointer
        &:hover
          background-color: colors.content.table.hover.default
        &.delete
          width: 14px
          height: 14px
          padding: 0 10px 0 15px
          background: no-repeat url("images/trash.png") 50% 50%
          &:hover
            background-color: colors.content.table.hover.trash
        span.box
          float: left
          width: 14px
          height: 14px
          padding: 2px 10px 2px 15px
          background: no-repeat url("images/box.png") 50% 50%
        span.title:hover
          color: colors.content.table.hover.text
      td.complete
        span.box
          background: no-repeat url("images/checked_box.png") 50% 50%
        span.title
          text-decoration: line-through
          color: colors.content.table.complete

#sidebar
  float: left
  width: 335px
  height: 100%
  padding-top: 70px
  background: colors.sidebar.default.bg
  color: colors.sidebar.default.text
  #all_wrapper
    padding-bottom: 40px
  li > div
    padding: 12px 0 12px 135px
    line-height: 21px
    cursor: pointer
    &.selected
      background: colors.sidebar.selected.bg
      color: colors.sidebar.selected.text
  span.header
    position: relative
    color: colors.sidebar.header
    font-size: 18px
    span
      position: absolute
      top: -3.5px
      left: -40px
      width: 30px
      height: 30px
  #all
    span.header span
      background: no-repeat url("images/all.png") 50% 50%

  #complete
    li:nth-child(n+2)
      text-decoration: line-through
    span.header span
      background: no-repeat url("images/complete.png") 50% 50%

#modal_layer
  z-index: 1
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0, 0, 0, 0.4)

#form_modal *
  background: none
  color: colors.modal.text
  font-size: 16px
  outline: none

#form_modal
  z-index: 2
  position: absolute
  top: 200px
  left: 50%
  width: 575px
  padding: 40px 0 40px 30px
  margin-left: -287.5px
  background: colors.modal.bg
  color: colors.modal.text
  dt, dd
    display: inline-block
    padding-bottom: 20px
  dt
    vertical-align: top
    width: 110px
    padding-top: 12px
    label
      cursor: pointer
  textarea, input[type='text'], .date
    width: 395px
  textarea, input[type='text']
    box-sizing: border-box
    padding: 10px
  textarea
    height: 148px
    resize: none
  select
    box-sizing: border-box
    height: 43px
    width: 30.5%
    cursor: pointer
  #controls
    width: 395px
    margin-left: 110px
    button, input
      display: inline-block
      width: 47.5%
      padding: 10px 20px
      border: none
      border-radius: 4px
      background-color: colors.modal.button.bg
      color: colors.modal.button.text
      cursor: pointer
    input
      margin-right: 5%

@media(max-width: 768px)
  #sidebar
    display: none
  #content
    margin: 0
    padding-right: 20px
    min-width: 300px
    &.halfscreen
      margin-left: 335px
  #content header #sidebar_toggle
    display: block

@media(min-width: 770px)
  #sidebar
    display: block
